<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" /> <!-- Green color -->
            <corners android:radius="8dp" /> <!-- Rounded corners, adjust the radius as needed -->
        </shape>
    </item>
    <item>
        <ripple android:color="@color/navigation_background"> <!-- Ripple effect color, adjust as needed -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/transparent" /> <!-- Default button color -->
                    <corners android:radius="8dp" /> <!-- Rounded corners, adjust the radius as needed -->
                </shape>
            </item>
        </ripple>
    </item>
</selector>